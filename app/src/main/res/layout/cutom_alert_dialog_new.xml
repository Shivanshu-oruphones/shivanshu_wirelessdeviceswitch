<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialoguebox"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/BL_alert_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:visibility="visible" />
    <View
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/id_div"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lightBlue"
        android:layout_below="@+id/BL_alert_head"/>

    <TextView
        android:id="@+id/BL_alert_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_div"
        android:layout_marginTop="10dp"
        android:text="@string/app_name"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BL_alert_text"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BL_alert_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/cancel"
            android:textAllCaps="true"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/BL_alert_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="@string/ok"
            android:textSize="16sp"/>
    </LinearLayout>

</RelativeLayout>